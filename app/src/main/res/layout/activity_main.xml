
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ff000000">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 xmlns:tools="http://schemas.android.com/tools"
                 android:id="@+id/container"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 tools:context="itec.code2smile.MainActivity"
                 tools:ignore="MergeRootFrame" />

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:background="@drawable/background_list">


        <Button android:layout_width="match_parent"
                android:layout_height="@dimen/items_height"
                android:id="@+id/take_picture"
                android:text="Take a picuture"
                android:textStyle="bold"
                android:textColor="@color/settings_text_color"
                android:textSize="@dimen/font_medium"
                android:background="@drawable/background_list"
                android:drawableRight="@drawable/right_button"
                android:paddingRight="@dimen/right_padding"/>

        <View
                android:background="@color/separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        <Button android:layout_width="match_parent"
                android:layout_height="@dimen/items_height"
                android:id="@+id/open_gallery"
                android:text="Gallery"
                android:textColor="@color/settings_text_color"
                android:textStyle="bold"
                android:textSize="@dimen/font_medium"
                android:background="@drawable/background_list"
                android:drawableRight="@drawable/right_button"
                android:paddingRight="@dimen/right_padding"/>

        <View
                android:background="@color/separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        <Button android:layout_width="match_parent"
                android:layout_height="@dimen/items_height"
                android:text="Create new Album"
                android:id="@+id/create_album"
                android:textColor="@color/settings_text_color"
                android:textSize="@dimen/font_medium"
                android:textStyle="bold"
                android:background="@drawable/background_list"
                android:drawableRight="@drawable/right_button"
                android:paddingRight="@dimen/right_padding"/>

        <View
                android:background="@color/separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="@dimen/items_height"
                  android:id="@+id/text_view"
                  android:text="Existing Albums"
                  android:gravity="center"
                  android:textColor="@color/settings_text_color"
                  android:textStyle="bold"
                  android:textSize="@dimen/font_medium"
                  android:background="@drawable/background_list"/>

        <ListView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/list_view"
                  android:textColor="@color/settings_text_color"
                  android:textSize="@dimen/font_medium"
                  android:textStyle="bold"
                  android:divider="@color/divider_color"
                  android:dividerHeight="1dp"
                  android:paddingLeft="10dp"></ListView>

    </LinearLayout>
</RelativeLayout>